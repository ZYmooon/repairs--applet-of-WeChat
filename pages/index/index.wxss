.addimgbtn::after {
  position: absolute;
  content: '';
  display: block;
  width: 35%;
  height: 2rpx;
  background: #999;
  left: 50%;
  top: 50%;
  transform: translate(-50%);
}

.addimgbtn::after {
  position: absolute;
  content: '';
  display: block;
  width: 35%;
  height: 2rpx;
  background: #999;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.addimgbtn::before {
  position: absolute;
  content: '';
  display: block;
  height: 35%;
