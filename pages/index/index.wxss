.login-btn {
  z-index: 1000;
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  top: 35%;
  left: 50%;
  width: 80%;
  padding: 50rpx 35rpx;
  background: #fff;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  animation: login 0.8s cubic-bezier(0.075, 0.82, 0.165, 1) forwards;
  transition: transform;
}

@keyframes login {
  from {
    transform: translate(-50%, 500%);
  }

  to {
    transform: translate(-50%, -50%);
  }
}

.login-btn-mask {
  z-index: 999;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100vh;
  width: 100vw;
  background: rgba(0, 0, 0, 0.3);
}

.login-btn-title {
  color: #333;
  font-size: 39rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
}

.login-btn-content {
  font-size: 28rpx;
  color: #666;
}

.login-btn-login {
  background: rgb(26, 173, 25);
  color: #fff;
  font-size: 34rpx;
